{
  "openapi": "3.0.0",
  "info": {
    "title": "Sistema Financeiro API",
    "version": "1.0.0",
    "description": "API para gerenciamento de usuários e autenticação"
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "Servidor local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "fullName": { "type": "string" },
          "email": { "type": "string" },
          "code": { "type": "string" },
          "nuit": { "type": "string" },
          "msisdn": { "type": "string" },
          "address": { "type": "string" },
          "dateOfBirth": { "type": "string" },
          "gender": { "type": "string", "enum": ["M", "F", "Other"] },
          "role": { "type": "string", "enum": ["Cliente", "Funcionario", "Administrador"] },
          "notes": { "type": "string" },
          "isActive": { "type": "boolean" },
          "registrationDate": { "type": "string" },
          "nationality": { "type": "string" },
          "maritalStatus": { "type": "string" },
          "occupation": { "type": "string" },
          "preferredPaymentMethod": { "type": "string", "enum": ["M-pesa", "E-mola", "M-kesh", "Millenium Bim", "BCI"] },
          "loyaltyPoints": { "type": "integer" },
          "createdAt": { "type": "string" },
          "updatedAt": { "type": "string" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "tags": [
    { "name": "Authentication", "description": "Endpoints de autenticação" },
    { "name": "Users", "description": "Endpoints de usuários" },
    { "name": "Enums", "description": "Enumeradores do sistema" }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Autenticar usuário e obter token JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email", "example": "usuario@email.com" },
                  "password": { "type": "string", "example": "senha123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login bem-sucedido" },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/users/create": {
      "post": {
        "tags": ["Users"],
        "summary": "Criar um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["fullName", "email", "password", "code", "nuit", "msisdn", "address"],
                "properties": {
                  "fullName": { "type": "string", "example": "João Silva" },
                  "email": { "type": "string", "format": "email", "example": "joao@email.com" },
                  "password": { "type": "string", "minLength": 8, "example": "senha123" },
                  "code": { "type": "string", "example": "USR001" },
                  "nuit": { "type": "string", "example": "123456789" },
                  "msisdn": { "type": "string", "example": "840000000" },
                  "address": { "type": "string", "example": "Av. Marginal, Maputo" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado com sucesso" },
          "400": { "description": "Dados inválidos" },
          "409": { "description": "Email ou código já existem" }
        }
      }
    },
    "/users/all": {
      "get": {
        "tags": ["Users"],
        "summary": "Listar todos os usuários",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de usuários" },
          "401": { "description": "Não autorizado" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Buscar usuário por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Usuário encontrado" },
          "404": { "description": "Usuário não encontrado" }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Atualizar dados do usuário",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullName": { "type": "string" },
                  "address": { "type": "string" },
                  "dateOfBirth": { "type": "string", "format": "date" },
                  "gender": { "type": "string", "enum": ["M", "F", "Other"] }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Usuário atualizado com sucesso" },
          "404": { "description": "Usuário não encontrado" }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Desativar usuário (soft delete)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Usuário desativado com sucesso" },
          "404": { "description": "Usuário não encontrado" }
        }
      }
    },
    "/users/{id}/password": {
      "put": {
        "tags": ["Users"],
        "summary": "Alterar senha do usuário",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["currentPassword", "newPassword"],
                "properties": {
                  "currentPassword": { "type": "string" },
                  "newPassword": { "type": "string", "minLength": 8 }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Senha atualizada com sucesso" },
          "400": { "description": "Senha atual incorreta" }
        }
      }
    },
    "/users/{id}/email": {
      "put": {
        "tags": ["Users"],
        "summary": "Alterar email do usuário",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": { "email": { "type": "string", "format": "email" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Email atualizado com sucesso" },
          "409": { "description": "Email já está em uso" }
        }
      }
    },
    "/users/{id}/activate": {
      "put": {
        "tags": ["Users"],
        "summary": "Ativar usuário",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Usuário ativado com sucesso" },
          "404": { "description": "Usuário não encontrado" }
        }
      }
    },
    "/user/online": {
      "get": {
        "tags": ["Users"],
        "summary": "Obter informações do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Informações do usuário online" },
          "401": { "description": "Não autorizado" }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Verificar saúde da API",
        "responses": {
          "200": { "description": "API funcionando" }
        }
      }
    },
    "/enums/provinces": {
      "get": {
        "tags": ["Enums"],
        "summary": "Obter todas as províncias de Moçambique",
        "responses": {
          "200": { "description": "Lista de províncias" }
        }
      }
    },
    "/enums/districts": {
      "get": {
        "tags": ["Enums"],
        "summary": "Obter todos os distritos",
        "parameters": [{ "name": "provinceCode", "in": "query", "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Lista de distritos" }
        }
      }
    },
    "/enums/genders": {
      "get": {
        "tags": ["Enums"],
        "summary": "Obter todos os gêneros",
        "responses": {
          "200": { "description": "Lista de gêneros" }
        }
      }
    },
    "/enums/marital-statuses": {
      "get": {
        "tags": ["Enums"],
        "summary": "Obter todos os estados civis",
        "responses": {
          "200": { "description": "Lista de estados civis" }
        }
      }
    },
    "/enums/roles": {
      "get": {
        "tags": ["Enums"],
        "summary": "Obter todos os papéis de usuário",
        "responses": {
          "200": { "description": "Lista de papéis" }
        }
      }
    },
    "/enums/nationalities": {
      "get": {
        "tags": ["Enums"],
        "summary": "Obter todas as nacionalidades",
        "responses": {
          "200": { "description": "Lista de nacionalidades" }
        }
      }
    },
    "/enums/payment-methods": {
      "get": {
        "tags": ["Enums"],
        "summary": "Obter todos os métodos de pagamento",
        "responses": {
          "200": { "description": "Lista de métodos de pagamento" }
        }
      }
    }
  }
}
